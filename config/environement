#    chmod 0600 ~/.ssh/authsock.sh
# fi
# if [[ -e ~/.ssh/authsock.sh && -z $SSH_AUTH_SOCK ]] || [[ -n ${SSH_AUTH_SOCK} && ! -S ${SSH_AUTH_SOCK} ]];then
#    source ~/.ssh/authsock.sh
#    if [[ ! -S ${SSH_AUTH_SOCK} ]];then
#        rm -f ~/.ssh/authsock.sh
#        unset SSH_AUTH_SOCK
#    fi
# fi
