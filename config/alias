#!/bin/bash
alias b='bzip2 -9vf'
alias z="gzip -9fv"
alias md='mkdir -p'

alias ls="ls --color=auto -F"
alias d=ls
alias s='cd ..'
alias p='cd -'
alias ll='ls -arSlh'
alias la='ls -A'
alias lt='ls -artl'

alias df='df -h'
alias du='du -sh'
alias cp="cp -i"
alias rm="rm -i"
alias mv="mv -i"

alias vih="$EDITOR ~/.shell/hosts/${HOST%%.*}.sh"
alias cdf="cd ~/.shell/functions/hosts/${HOST%%.*}"

#GIT
alias ggd='git diff --ignore-space-at-eol -b -w --ignore-blank-lines'
alias gb="git checkout -b"
alias pr="git pr"
alias gc="git checkout"
builtin type -p hub >/dev/null && alias gcm="git checkout master && git branch --merged | egrep -v '(^\*|master)'| xargs -r git branch -d && hub sync"
builtin type -p hub >/dev/null && alias hs='hub sync'

alias fina='fin -a'
builtin type -P systemctl &>/dev/null && alias ss="sudo systemctl"
builtin type -P tailf &>/dev/null || alias tailf="tail -f"

alias grep="grep --color=auto"
