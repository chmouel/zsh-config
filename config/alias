#!/bin/bash
alias b='bzip2 -9vf'
alias z="gzip -9fv"
alias md='mkdir -p'

LS=ls
type -p gls >/dev/null && LS=gls
alias ls="${LS} --color=auto -F"
alias d=ls
alias s='cd ..'
alias p='cd -'
alias ll='ls -arSlh'
alias la='ls -A'
alias lt='ls -artl'

alias df='df -h'
alias du='du -sh'
alias cp="cp -i"
alias rm="rm -i"
alias mv="mv -i"

alias vih="$EDITOR ~/.shell/hosts/${HOST%%.*}.sh"
alias cdf="cd ~/.shell/functions/hosts/${HOST%%.*}"

alias gl="git log --no-merges --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
alias ggd='git diff --ignore-space-at-eol -b -w --ignore-blank-lines'
alias gc="git checkout"
alias gb="git checkout -b"

alias e="emacsclient -n"

alias fina='fin -a'
type -p systemctl &>/dev/null && alias ss="sudo systemctl"

alias grep="grep --color=auto"
