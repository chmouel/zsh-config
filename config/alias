#!/bin/bash
alias b='bzip2 -9vf'
alias z="gzip -9fv"
alias md='mkdir -p'


if [[ ${_ARCHI} == "Darwin" ]];then
	alias ls='ls -G -F'
else
	alias ls='ls --color=auto -F'
fi
alias d=ls
alias s='cd ..'
alias p='cd -'
alias ll='ls -arSlh'
alias la='ls -A'
alias lt='ls -artl'

alias df='df -h'
alias du='du -sh'
alias cp="cp -i"
alias rm="rm -i"
alias mv="mv -i"

alias vih="$EDITOR ~/.shell/hosts/${HOST%%.*}.sh"
alias cdf="cd ~/.shell/functions/hosts/${HOST%%.*}"

