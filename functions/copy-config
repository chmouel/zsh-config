if [ ! -z $1 ]; then
cat << EOF > /tmp/install.sh
#!/bin/bash
if [[ -f /etc/redhat-release ]];then
   PZSH=zsh
   PVIM=vim-enhanced
elif [[ -f /etc/debian_version ]];then
   PZSH=zsh-beta
   PVIM=vim
fi
   

if [[ -x /usr/bin/apt-get ]];then
apt-get -y install \$PZSH
apt-get -y install screen
apt-get -y install \$PVIM
fi

cp \$HOME/.shell/hosts/paris.sh \$HOME/.shell/hosts/\`hostname -s\`.sh

chsh -s /bin/zsh

EOF
        echo -n "Sending zsh conf to $1... "
        cd $HOME && \
        tar cf - /tmp/install.sh Bin/* .vimrc .screenrc .shell/* .zshrc 2> /dev/null | ssh $1 "tar xf - 2> /dev/null" \
		&& cd $OLDPWD && echo done.
		rm -f /tmp/install.sh
else
	echo "Need a host"
fi
