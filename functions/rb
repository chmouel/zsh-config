
case $(uname -s) in
    Darwin)
        local target='macosx';;
    *)
        local target='vm';;
esac

[[ $0 == *3 ]] && pyver=3

target=${target}${pyver}

topdir=$(git rev-parse  --show-toplevel)
virtualenv -p python${pyver} ${topdir}/.tox/${target} && \
    ${topdir}/.tox/${target}/bin/pip install \
             -r ${topdir}/requirements.txt \
             -r ${topdir}/test-requirements.txt \
             -e ${topdir}


# vim: ft=zsh
